extends base

block content
  main.main(style="background-color: #f4f4f4; padding: 50px 0;")

    .card-container(style="display: flex; flex-wrap: wrap; justify-content: center; gap: 60px;")

      each tour in tours
        .card(style="background-color: #fff; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); overflow: hidden; width: 350px;")

          .card__header(style="position: relative;")
            .card__picture
              .card__picture-overlay(style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-image: linear-gradient(to right bottom, rgba(126, 213, 111, 0.85), rgba(40, 180, 133, 0.85)); opacity: 0.65;")
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`, style="width: 100%; display: block;")
            h3.heading-tertirary(style="position: absolute; bottom: 20px; left: 20px; color:brown; font-weight:800; font-size: 1.6em;") #{tour.name}

          .card__details(style="padding: 20px;")
            h4.card__sub-heading(style="font-size: 1.5em; font-weight: 600; color: #333; margin-bottom: 10px;")= `${tour.difficulty} ${tour.duration}-day tour`
            p.card__text(style="font-size: 1.3em; color: #666; margin-bottom: 10px;")= tour.summary
            .card__data(style="display: flex; align-items: center; font-size:1.2em; color: #888; margin-bottom: 10px;")
              svg.card__icon(style="width: 20px; height: 20px; fill: #888; margin-right: 5px;")
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span(style="flex-grow: 1;")= tour.startLocation.description
            .card__data(style="display: flex; align-items: center; font-size:1.2em; color: #888; margin-bottom: 10px;")
              svg.card__icon(style="width: 20px; height: 20px; fill: #888; margin-right: 5px;")
                use(xlink:href='/img/icons.svg#icon-calendar')
              span(style="flex-grow: 1;")= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
            .card__data(style="display: flex; align-items: center; font-size:1.2em; color: #888; margin-bottom: 10px;")
              svg.card__icon(style="width: 20px; height: 20px; fill: #888; margin-right: 5px;")
                use(xlink:href='/img/icons.svg#icon-flag')
              span(style="flex-grow: 1;")= `${tour.locations.length} stops`
            .card__data(style="display: flex; align-items: center; font-size:1.2em; color: #888; margin-bottom: 10px;")
              svg.card__icon(style="width: 20px; height: 20px; fill: #888; margin-right: 5px;")
                use(xlink:href='/img/icons.svg#icon-user')
              span(style="flex-grow: 1;")= `${tour.maxGroupSize} people`

          .card__footer(style="padding: 20px; border-top: 1px solid #eee; display: flex; justify-content: space-between; align-items: center;")
            p(style="margin: 0;")
              span.card__footer-value(style="font-size: 1em; color: #333;")= `$${tour.price}`
              span.card__footer-text(style="font-size:1em; color: #888;") per person
            p.card__ratings(style="margin: 0;")
              span.card__footer-value(style="font-size: 1em; color: #333;")= tour.ratingsAverage
              span.card__footer-text(style="font-size:1em; color: #888;")= `rating (${tour.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`, style="text-decoration: none; color: #fff; font-weight:800;  background-color: #4CAF50; border: none; border-radius:12px; padding: 10px 20px; font-size: 0.8em; cursor: pointer;") Details
